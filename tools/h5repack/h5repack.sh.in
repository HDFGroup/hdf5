###############################################################

arg1="$FILE4 -l dset_compact:CONTI"
arg2="$FILE4 -l dset_compact:CHUNK=2x5"
arg3="$FILE4 -l dset_compact:COMPA"
arg4="$FILE4 -l dset_contiguous:COMPA"
