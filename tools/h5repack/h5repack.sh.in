arg6="$FILE4 -l dset_contiguous:CONTI"
arg7="$FILE4 -l dset_chunk:COMPA"
arg8="$FILE4 -l dset_chunk:CONTI"
arg9="$FILE4 -l dset_chunk:CHUNK=18x13"
