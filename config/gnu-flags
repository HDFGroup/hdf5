    H5_CFLAGS="$H5_CFLAGS -Wendif-labels"

    # Append warning flags from gcc-3.4* case
    H5_CFLAGS="$H5_CFLAGS -Wdeclaration-after-statement -Wold-style-definition -Winvalid-pch"

